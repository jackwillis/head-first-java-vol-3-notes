<project name="QuizCardBuilder" default="build" basedir=".">

    <!-- Define properties for directories -->
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="jar.dir" value="${build.dir}/jars"/>
    <property name="jar.name" value="QuizCardBuilder.jar"/>
    <property name="main.class" value="quizcardbuilder.QuizCardBuilder"/>

    <!-- Initialize directory structure -->
    <target name="init">
        <mkdir dir="${classes.dir}"/>
    </target>

    <!-- Clean the build directory -->
    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

    <!-- Compile Java source files -->
    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="false"/>
    </target>

    <!-- Build the JAR file -->
    <target name="jar" depends="compile">
        <jar destfile="${jar.dir}/${jar.name}" basedir="${classes.dir}" includes="**/*.class">
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>
    </target>

    <!-- Default build target -->
    <target name="build" depends="clean,jar"/>

    <!-- Run the application -->
    <target name="run" depends="jar">
        <java jar="${jar.dir}/${jar.name}" fork="true"/>
    </target>

</project>
